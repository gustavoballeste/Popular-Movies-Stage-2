<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/review_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/body_text_1"
        android:textSize="16sp"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/review_content"
        style="@style/MovieDetailTextBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/review_author"
        android:layout_alignLeft="@id/review_author"
        android:layout_alignRight="@id/review_author"
        android:layout_alignStart="@id/review_author"
        android:layout_below="@id/review_author"
        android:textColor="@color/body_text_2"
        tools:text="SSS" />

</RelativeLayout>
